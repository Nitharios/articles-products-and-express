<h1>Edit Product</h1>

{{#each data}}

  <form action="/products/{{id}}?_method=PUT" method="POST">
    <p>ID: <input type="text" name="id" value={{id}} disabled></p>
    <p>Name: <input type="text" name="name" value="{{name}}"></p>
    <p>Price: <input type="text" name="price" value="{{price}}"></p>
    <p>Inventory: <input type="text" name="inventory" value="{{inventory}}"></p>

    <input type="submit" value="MAKE CHANGES">
  </form> 

  <h1>Delete Product</h1>
  <form action="/products/{{id}}?_method=DELETE" method="POST">
    ID: <input type="text" name="name" value="{{id}}" disabled>
    <p><input type="submit" value="DELETE"></p>
  </form>

{{/each}}
