<h1>Articles</h1>

<h2>Add New Article</h2>

<form action="/articles/new" method="get">
  <input type="submit" value="ADD">
</form>

<h2>List of Articles</h2>

<ul>
  {{#each data}}
    <li>
      <h4>Title: {{title}}, 
      <br>Author: {{author}}, 
      <br>Body: {{body}}, 
      <p><form action="/articles/{{id}}/edit" method="get">
        <input type="submit" value="EDIT"></p>
      </form>
    </li>
  {{/each}}
</ul>