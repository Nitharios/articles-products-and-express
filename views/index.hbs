{{#if products}}
  
  {{#if products.list}}

    {{> listProducts}}

  {{else if products.new}}

    {{> new}}

  {{else if products.item}}

    {{> product}}

    {{#if products.edit}}
      {{> edit}}
    {{/if}}

  {{/if}}

{{else if articles}}
  
  {{#if articles.list}}

    {{> listArticles}}

  {{else if articles.new}}

    {{> articles/new}}

  {{else if articles.item}}

    {{> article}}

    {{#if articles.edit}}
      {{> articles/edit}}
    {{/if}}

  {{/if}}

{{/if}}